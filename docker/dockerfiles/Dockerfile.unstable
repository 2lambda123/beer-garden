FROM python:3.7-alpine
WORKDIR /src
ENTRYPOINT ["beergarden"]

ENV BG_PLUGIN_LOCAL_DIRECTORY=/plugins \
    BG_PLUGIN_LOGGING_CONFIG_FILE=/src/example_configs/plugin-logging.yaml \
    BG_LOG_CONFIG_FILE=/src/example_configs/logging-config.yaml

ADD ./example_configs/logging-config.yaml /src/example_configs/
ADD ./example_configs/plugin-logging.yaml /src/example_configs/
ADD ./requirements.txt .
ADD ./dist/*.whl ./

RUN set -ex \
    && apk add --no-cache --virtual .build-deps \
       gcc make musl-dev libffi-dev openssl-dev git \
    && pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir ./*.whl \
    && apk del .build-deps
